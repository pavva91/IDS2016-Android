                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.emergencyescape.MainActivity" />
        </activity>
        <activity
            android:name="com.emergencyescape.ItineraryActivity"
            android:label=" "
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.emergencyescape.MainActivity" />
